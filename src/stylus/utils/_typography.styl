// Typographic Variables
//////////////////////////////////////////////////////

// Guide

$font-family = 'Press Start 2P'

$font-weight = {
  regular: 400,
}

$letter-spacing = {
  normal: normal
}

// Universal Typographic Mixin
//////////////////////////////////////////////////////

// We use one, only one, Karl, a universal mixin for all cases!

$text($name)
  font-family $font-family
  letter-spacing $letter-spacing.normal

  if $name == "elena"
    font-size 72px
    line-height 72px
    font-weight $font-weight.regular
  if $name == "katya"
    font-size 28px
    line-height 36px
    font-weight $font-weight.regular
  if $name == "maria"
    font-size 24px
    line-height 32px
    font-weight $font-weight.regular
  if $name == "nina"
    font-size 13px
    line-height 16px
    font-weight $font-weight.regular
