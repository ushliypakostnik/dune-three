//////////////////////////////////////////////////////
//////////////////////////////////////////////////////

// Utilities
//////////////////////////////////////////////////////

$flexCenter
  display flex
  align-items center
  justify-content center

// Ellipsis to long string
$lineOverflow
  display block
  white-space nowrap
  overflow hidden
  text-overflow ellipsis

// Защита для больших блоков текста, например в гридах
$longLettersProtection
  -ms-word-break break-all
  word-break break-all
  word-break break-word
  -webkit-hyphens auto
  -moz-hyphens auto
  -ms-hyphens auto
  hyphens auto


// Elements
//////////////////////////////////////////////////////

$viewport
  position fixed
  overflow hidden
  top 0
  left 0
  right 0
  bottom 0
  width 100vw
  height 100vh

$button--hover
  &:hover
    background rgba($colors.dark, $opacites.pop)

$button
  @extend $button--hover
  user-select none
  cursor pointer
  white-space nowrap
  outline none
  text-align center
  transition background $effects.duration
  background transparent
  color $colors.dark
  padding ($gutter / 4) ($gutter * 1.5)
  border $border-width solid $colors.dark
  box-shadow none
  text-decoration none
  text-transform uppercase
  outline none
  $text("katya")

$switch
  @extend $button--hover
  margin $gutter * 2 auto 0
  border $border-width solid $colors.dark
  width 140px
  list-style none
  position relative
  display flex
  flex-direction:row

  &__item
    flex-grow 1
    text-align center
    text-transform uppercase
    $text("maria")

    span,
    a
      color $colors.dark
      box-sizing border-box
      display block
      padding ($gutter / 10) ($gutter / 4)
      text-decoration none
      width 100%
      height 100%

    &--active
      background $colors.primary

  &__wrapper
    display flex
    justify-content center
