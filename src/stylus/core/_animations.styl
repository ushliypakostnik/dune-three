// Keyframes
//////////////////////////////////////////////////////

@keyframes fade
  0%
    opacity 0

  100%
    opacity 1


@keyframes effect
  from
    opacity 0.75

  50%
    opacity 0.25

  to
    opacity 0.75

.effect
  animation effect ($effects.duration * 10) infinite


// Vue classes for animation
//////////////////////////////////////////////////////

.fade
  &-enter-active
    animation fade $effects.duration forwards

  &-leave-active
    animation fade $effects.duration reverse

.fade2
  &-enter-active
    animation fade ($effects.duration * 2) forwards

  &-leave-active
    animation fade ($effects.duration * 2) reverse

